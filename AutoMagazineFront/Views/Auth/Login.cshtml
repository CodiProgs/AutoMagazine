@model LoginUserDto

<h1 class="text-center">Вход в аккаунт</h1>
<form method="post" asp-action="Login">
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="Email" asp-for="Email"></label>
        <input type="email" id="Email" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="Password" asp-for="Password"></label>
        <input type="password" id="Password" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">Войти</button>

    <div class="text-center">
        <p>Нет аккаунта? <a asp-action="Register">Зарегистрироваться</a></p>
    </div>
</form>