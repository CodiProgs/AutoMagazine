@model User

<h1 class="text-center">Регистрация аккаунта</h1>
<form method="post" asp-action="Register">
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="FullName" asp-for="FullName"></label>
        <input type="text" id="FullName" class="form-control" asp-for="FullName" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="Phone" asp-for="Phone"></label>
        <input type="text" id="Phone" class="form-control" asp-for="Phone" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="Address" asp-for="Address"></label>
        <input type="text" id="Address" class="form-control" asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="Email" asp-for="Email"></label>
        <input type="email" id="Email" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div data-mdb-input-init class="form-outline mb-2">
        <label class="form-label" for="Password" asp-for="Password"></label>
        <input type="password" id="Password" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4 mt-2">Зарегистрироваться</button>

    <div class="text-center">
        <p>Есть аккаунт? <a asp-action="Register">Войти</a></p>
    </div>
</form>